<?xml version='1.0' encoding='utf-8'?>
<!-- Inspired from Mistuba -->
<scene>
    <integrator type="path_mis"/>

    <camera type="perspective">
        <transform name="toWorld">
            <scale value="-1,1,1"/>
            <lookat target="0,0,1" origin="5,5,1" up="0,0,1"/>
        </transform>
        <float name="fov" value="100"/>

        <integer name="height" value="600"/>  
        <integer name="width" value="800"/>
    </camera>

    <sampler type="independent">
        <integer name="sampleCount" value="1024"/>
    </sampler>

    <mesh type="sphere">
        <point name="center" value="0,0,1"/>
        <float name="radius" value="30"/>

        <emitter type="envmap">
            <string name="filename" value="../../textures/envmaptext.exr"/>   
        </emitter>
    </mesh>


    <mesh type="sphere">
        <point name="center" value="0,0,1"/>
        <float name="radius" value="3"/>   
        <float name="height" value="1.0"/>
        <float name="scale" value="100.0"/>

		<bsdf type="disney">
           	<color name="baseColor" value="1.0,1.0,1.0"/>
		   	<float name="metallic" value="1.0"/>
		   	<float name="specular" value="0"/>
			<float name="specularTint" value="0"/>
		   	<float name="roughness" value="0.5"/>
			<float name="sheen" value="0"/>
			<float name="sheenTint" value="0"/>
        </bsdf>

    </mesh>

</scene>